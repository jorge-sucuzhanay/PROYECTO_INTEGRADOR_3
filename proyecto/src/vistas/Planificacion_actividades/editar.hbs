<div class="global-container">
    <div class="card w-75">
        <div class="card-body">

            <form method="POST" action="/Planificacion_actividades/editar/{{user.id_usuario}}">
                {{#each editarPlanificacionActividades}}
                <div>
                    <div class="mb-3" id="fecha">
                        <label class="form-label">Fecha Evento</label>
                        <input type="text" class="form-control" name="fecha_evento" id="fecha_creacion" value="{{fecha_evento}}"
                        readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" id="">Resultado Actividad</label>
                        <textarea type="text" class="form-control" name="resultado_actividad" id="observaciones" maxlength="700"
                            value="{{resultado_actividad}}" required></textarea>
                    </div>
                    <button type="submit"class="btn btn-success" id="boton">Guardar Cambios</button>
                </div>
                <hr>
                {{/each}}
            </form>

        </div>
    </div>
</div>